<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts icon-left" href="{{page_url prev}}">Newer Posts</a>
    {{/if}}
    <span class="page-number">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts icon-right" href="{{page_url next}}">Older Posts</a>
    {{/if}}
</nav>