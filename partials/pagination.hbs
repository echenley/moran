<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">&laquo; Newer Posts</a>
    {{/if}}
    <span class="page-number faded">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Older Posts &raquo;</a>
    {{/if}}
</nav>