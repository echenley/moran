{{!< default}}

<main class="content cf" role="main">
    <article class="{{post_class}}">
    {{#post}}
	{{#if image}}
    	<div class="post-cover" style="background-image: url({{image}})">
			<div class="vertical">
	    		<h1 class="post-title inner shadow">{{title}}</h1>
    		</div>
			<a class="scroll-down icon-down shadow" href="#post-content"><span class="hidden">Scroll Down</span></a>
    	</div>
	    <div class="inner">
	        <section id="post-content" class="post-content">
    {{else}}
	    <div class="inner">
	        <section id="post-content" class="post-content">
	    		<h1 class="post-title">{{title}}</h1>
	{{/if}}
	            {{content}}
	        </section>
	    </div>
    {{/post}}
    </article>
</main>